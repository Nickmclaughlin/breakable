<% if current_user %>
  <nav class="top-bar" data-topbar role="navigation">
    <ul class="title-area">
      <li class="name">
        <h1><%= link_to 'Eros Match', root_path %> </h1>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
        <% if current_user %>
          <li><%= link_to "sign out", destroy_user_session_path, method: :delete %></li>
          <% if current_user.bio == nil  %>
            <li><%= link_to "Complete Profile", edit_user_path(current_user) %></li>
          <% end %>
          <% if current_user.bio != nil && current_user.interests != nil && current_user.profession != nil   %>
            <li><%= link_to "Edit Profile", edit_user_path(current_user) %></li>
            <li><%= link_to "Profile", user_path(current_user) %></li>
          <% if current_user.admin? %>
              <li><%= link_to "Admin", admin_users_path %></li>
          <% end %>
            <li><%= image_tag current_user.prof_photo(current_user.photos), style:"height: 45px; width: 35px; padding: 3px;"%></li>
          <% end %>
        <% else %>
          <li><%= link_to "sign up", new_user_registration_path %></li>
          <li><%= link_to "sign in", new_user_session_path %></li>
        <% end %>

      </ul>
    </section>
  </nav>
<% end%>
